<view wx:if="{{show}}" class="mask" catchtouchmove="noop">
  <view class="modal" catchtap="noop">
    <!-- full background image -->
    <image class="modal-bg" src="/assets/my/Frame6.png" mode="scaleToFill" />

    <view class="modal-inner">
      <!-- Top: rank -->
      <view class="rank-title">
        <text class="rank-badge">{{rankText}}</text>
      </view>
      <view class="rank-title">
        <text class="rank-sub">恭喜 {{userid}} 获得 {{prize}}元档({{stateHint}})</text>
      </view>
      <!-- Prize card -->
      <view class="prize-card">
        <image class="prize-frame" src="/assets/my/Frame8.png" mode="scaleToFill" />
        <image class="prize-img" src="/assets/my/Reward.png" mode="aspectFit" />
      </view>

      <view class="panel panel-self">    
        <view class="description">奖品领取方式: 添加客服微信领取</view>
        <view class="description">领取步骤:</view>
        <view class="section">第一步, 截图本界面</view>
        <view class="section">第二步, 添加客服微信，发送截图</view>
        <view class="section">第三步, 7日后获得奖励</view>
      </view>

      <view class="panel-link cs-line">
        <text class="cs-id">点击复制客服微信</text>
        <!-- <text class="cs-gap"/> -->
        <button class="cs-btn" bindtap="copyCS" disabled="{{false}}">复制</button>
      </view>
    </view>
  </view>
  <button class="close-btn" bindtap="close" hover-class="none">
    <view class="close-line a"></view>
    <view class="close-line b"></view>
  </button>
</view>